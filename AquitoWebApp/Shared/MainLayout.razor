@inherits LayoutComponentBase

<MudLayout>
    <MudAppBar Elevation="1" Dense="true">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
            OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.h5" Class="ml-3">Aquito</MudText>
        <MudAppBarSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" />
    </MudAppBar>
    <MudDrawer @bind-Open="@open" Elevation="1" Variant="@DrawerVariant.Temporary">
        <img
            src="https://res.cloudinary.com/dlnyb1her/image/upload/v1618456469/aquito-imagenes/u0rd2z7ohcgwecqwdnf9.png" />
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
        <MudFab Class="btn-flotante" Link="about" Color="Color.Primary" Icon="@Icons.Material.Filled.ContactSupport" />
    </MudMainContent>
</MudLayout>

<BlazoredModal />


<style>
    .btn-flotante {
        position: fixed;
        bottom: 40px;
        right: 40px;
        transition: all 300ms ease 0ms;
        box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
        z-index: 99;
    }
</style>

@code{
    bool open = false;

    void ToggleDrawer()
    {
        open = !open;
    }

}